<%= flash.now[:notice] %>

<h3>It's Time to Create a Task...</h3>

	<%= form_for @tas, url: tasklist_tasks_path(tasklist_id: @taskli.id), method: :post do |f| %>
<table class="table table-hover">
	<thead>	
		<th>Task Name</th>
		<th>Description</th>
		<th>Due Date</th>
		<th>Priority</th>
		<th>Status</th>

	</thead>
	<tbody>
		<tr>
			<td>
			  <%= f.text_field :taskname %>
			</td>
			<td>
			  <%= f.text_field :description %>
			</td>
			<td>
			  <%= f.date_field :duedate %>
			</td>
			<td>
			  <%= f.text_field :priority %>
			</td>
			<td>
			  <%= f.text_field :status %>
			</td>
		</tr>
	</tbody>

	
</table>
	<div class="buttons">

	  <%= f.submit "Create" %>
	 </div>
	 <div class=buttons><%= link_to "Back_to_All_Tasks", tasklist_tasks_path %></div>
	<% end %>
