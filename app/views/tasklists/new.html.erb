
<h3>It's Time to Create a Tasklist...</h3>

	<%= form_for @taskli, url: tasklists_path, method: :post do |f| %>
<table class="table table-hover">
	<thead>	
		<th>Task List Name</th>
		<th>Due Date</th>

	</thead>
	<tbody>
		<tr>
			<td>
			  <%= f.text_field :tasklistname %>
			</td>
			<td>
			  <%= f.date_field :duedate %>
			</td>
		</tr>
	</tbody>

	
</table>
	<div class="buttons">

	  <%= f.submit "Create" %>
	 </div>
	 <div class=buttons><%= link_to "Back_to_All_Tasklists", tasklists_path %></div>
	<% end %>
